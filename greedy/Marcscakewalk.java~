
#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;

int minmiles(int *calories){
    
    int miles = 0;
    int length = sizeof(calories)/sizeof(int);
    int i, j, temp;

    //sorting the calories in decreasing order
    for (int i = 0; i < length - 1; i++) {
        for (int j = 1; j < length - i; j++) {
            if (calories[j - 1] < calories[j]) {
                temp = calories[j - 1];
                calories[j - 1] = calories[j];
                calories[j] = temp;
            }
        }
    }

    
    
    std::cout << "-----------" << std::endl;
    for(int i = 0; i < length; i++){
      std::cout << calories[i] << " ";
    }
    std::cout << std::endl;
    std::cout << "-----------" << std::endl;

    
    for(int i = 0; i < length; i++){
        miles = miles + (calories[i] * pow(2, i));
	std::cout << miles << std::endl;
    }
    
    return miles;
}

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
    int n; //number of cupcakes
    std::cin >> n;
    int *calories = new int[n];
    for(int i = 0; i < n; i++){
        scanf("%d", &calories[i]);
    }
    if(n >= 1 && n <= 40){
        int result = minmiles(calories);
        std::cout << result;
    }
    return 0;
}

